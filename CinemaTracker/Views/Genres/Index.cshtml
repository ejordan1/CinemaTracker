@{ Layout = "_Layout"; }

@using CinemaTracker.Models;
@model List<CinemaTracker.Models.Genre>;

<h1>Welcome to CinemaTracker!</h1>

@if(Model.Count == 0)
{
    <h3>There are no genres. That(apostraphe)s the thing</h3>
}

@foreach(Genre genre in Model)
{
    <h1>@Html.ActionLink($"{genre.Name}", "Details", new { id = genre.GenreId})</h1>
}

<p>@Html.ActionLink("Add new Genre", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>